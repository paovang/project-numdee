{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "swc",
    "typeCheck": true,
    "assets": [
      { "include": "common/localization/**/*", "watchAssets": true },
      { "include": "infrastructure/adapters/mail/templates/**/*", "watchAssets": true }
    ]
  }
}